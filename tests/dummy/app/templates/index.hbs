  {{#if sections.isTitle}}
    <h3 class='amagami-right-image-slide__header'>Goal Details</h3>
  {{else if sections.isText}}
    <ul class='amagami-right-image-slide__list'>
      <li class='amagami-right-image-slide__list-member'>
        something: whatever
      </li>
      <li class='amagami-right-image-slide__list-member'>
        something: whatever
      </li>
      <li class='amagami-right-image-slide__list-member'>
        something: whatever
      </li>
    </ul>
  {{else if sections.isImage}}
    <img class='amagami-right-image-slide__image' src='assets/images/sae.jpg'>
  {{/if}}
{{/amagami-right-image-slide}}

