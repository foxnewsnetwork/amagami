{{#amagami-small-hero as |sections|}}
  {{#if sections.isTitle}}
    <h1 class='amagami-small-hero__main-title'>Why?</h1>
    <h2 class='amagami-small-hero__subtitle'>To discover a better part of yourself</h2>
  {{else if sections.isCTA}}
    <button class='amagami-small-hero__cta-ghost-btn'>
      Accept the Challenge
    </button>
  {{/if}}
{{/amagami-small-hero}}


